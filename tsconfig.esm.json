{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",                 // ← important
    "moduleResolution": "Node",         // ← switch from NodeNext
    "outDir": "./lib/esm",
    "declaration": true,
    "declarationDir": "./lib/esm/types",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
